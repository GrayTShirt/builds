[Unit]
Description=Bolo OpenTSDB Consumer daemon
Documentation=man:opentsdb2bolo(8)
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/opentsdb2bolo
ExecStart=/usr/sbin/opentsdb2bolo $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/opentsdb2bolo.pid
KillMode=process
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target
