[Unit]
Description=Bolo Slack Subscriber daemon
Documentation=man:bolo2slack(8)
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/bolo2slack
ExecStart=/usr/sbin/bolo2slack $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/bolo2slack.pid
KillMode=process
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target
