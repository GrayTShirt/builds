[Unit]
Description=Bolo InfluxDB Subscriber daemon
Documentation=man:bolo2influxdb(8)
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/bolo2influxdb
ExecStart=/usr/sbin/bolo2influxdb $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/bolo2influxdb.pid
KillMode=process
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target
