#!/bin/bash
#
# opentsdb2bolo - Start up the Bolo OpenTSDB consumer
#
# chkconfig: 345 99 01
# description: Bolo is a monitoring system and toolkit. \
#              This service starts up the OpenTSDB consumer.
#
# processname: opentsdb2bolo
# config: /etc/sysconfig/opentsdb2bolo
# pidfile: /var/run/opentsdb2bolo.pid

### BEGIN INIT INFO
# Provides:          opentsdb2bolo
# Required-Start:    $local_fs $network $syslog
# Required-Stop:     $local_fs $syslog
# Should-Start:
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start up the Bolo Monitoring daemon
# Description:       Bolo is a monitoring system and toolkit.
#                    This service starts up the OpenTSDB consumer.
### END INIT INFO

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /etc/sysconfig/opentsdb2bolo ] && . /etc/sysconfig/opentsdb2bolo

RETVAL=0
prog="opentsdb2bolo"
lockfile=/var/lock/subsys/$prog

# Some functions to make the below more readable
OPENTSDB2BOLO=/usr/sbin/opentsdb2bolo
PID_FILE=/var/run/opentsdb2bolo.pid

start()
{
	[ -x $OPENTSDB2BOLO ] || exit 5

	echo -n $"Starting $prog: "
	$OPENTSDB2BOLO $OPTIONS && success || failure
	RETVAL=$?
	[ $RETVAL -eq 0 ] && touch $lockfile
	echo
	return $RETVAL
}

stop()
{
	echo -n $"Stopping $prog: "
	killproc -p $PID_FILE $OPENTSDB2BOLO
	RETVAL=$?
	[ $RETVAL -eq 0 ] && rm -f $lockfile
	echo
}

reload()
{
	echo -n $"Reloading $prog: "
	killproc -p $PID_FILE $OPENTSDB2BOLO -HUP
	RETVAL=$?
	echo
}

restart() {
	stop
	start
}

force_reload() {
	restart
}

rh_status() {
	status -p $PID_FILE opentsdb2bolo
}

rh_status_q() {
	rh_status >/dev/null 2>&1
}

case "$1" in
	start)
		rh_status_q && exit 0
		start
		;;
	stop)
		if ! rh_status_q; then
			rm -f $lockfile
			exit 0
		fi
		stop
		;;
	restart)
		restart
		;;
	reload)
		rh_status_q || exit 7
		reload
		;;
	force-reload)
		force_reload
		;;
	condrestart|try-restart)
		rh_status_q || exit 0
		if [ -f $lockfile ] ; then
			stop
			# avoid race
			sleep 3
			start
		fi
		;;
	status)
		rh_status
		RETVAL=$?
		if [ $RETVAL -eq 3 -a -f $lockfile ] ; then
			RETVAL=2
		fi
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|reload|force-reload|condrestart|try-restart|status}"
		RETVAL=2
esac
exit $RETVAL
