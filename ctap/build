#!/bin/bash
set -e

BUILD=${BUILD:-1}
BRANCH=${BRANCH:-master}
if [[ -z "${DIST:-}" ]]; then
  echo >&2 "\$DIST not specified; aborting package build"
  exit 1
fi
if [[ -z "${VERSION:-}" ]]; then
  echo >&2 "\$VERSION not specified; aborting package build"
  exit 1
fi

mkdir -p /srv/${DIST}

cd ${HOME}
git clone https://github.com/filefrog/ctap
cd ctap
git checkout ${BRANCH}

case "${FLAVOR}/${DIST}" in
(rpmbuild/el5|rpmbuild/el6)
  echo "${DIST} requires a newer version of autoconf than is provided upstream"
  echo "Pulling down from packagecloud..."
  curl -s https://packagecloud.io/install/repositories/bolo/bolo/script.rpm.sh | sudo bash
  sudo yum install -y autoconf-2.69 automake-1.15
  ;;
esac

./bootstrap
./configure
make dist

case ${FLAVOR} in
(debuild)
  cp ctap-${VERSION}.tar.gz ${HOME}/ctap_${VERSION}.orig.tar.gz
  cp -a debian/ ${HOME}/debuild/debian

  cd ${HOME}/debuild
  tar -xz --strip-components 1 -f ../ctap_${VERSION}.orig.tar.gz
  debuild -i -us -uc -b
  cp -a ../*.deb /srv/${DIST}
  ;;

(rpmbuild)
  cp ctap-${VERSION}.tar.gz ${HOME}/rpm
  rpmbuild -bb rpm.spec
  cp -a ${HOME}/rpm/x86_64/*.rpm /srv/${DIST}
  ;;

(*)
  echo >&2 "UNHANDLED FLAVOR \`${FLAVOR}'!"
  exit 2
  ;;
esac

echo "SUCCESS"
exit 0
